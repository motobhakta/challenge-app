<%= error_messages_for(@user) %>
<div class="container">
  <div class="row" id="registration">
        <div class="col-lg-offset-3 col-lg-6   col-xs-offset-3 col-xs-6">
            <div class="thumbnail" id = "registrationthumbnail">
                  <div class="caption">
                    <h3>New User Registartion</h3>
                    <hr/>
                    <%= form_for(:user, :url => {:controller => "users", :action => 'create'}, :html => {:role => "form", :class => "form-horizontal"}) do |f| %>
                      <div class="form-group">
                          <%= f.label :user_name, :class => "col-md-4 control-label" %>
                        <div class="col-md-8">
                          <%= f.text_field :username, :class => "form-control", :placeholder => "User Name" %>
                        </div>
                      </div>
                      <div class="form-group">
                          <%= f.label :first_name, :class => "col-md-4 control-label" %>
                        <div class="col-md-8">
                          <%= f.text_field :first_name, :class => "form-control", :placeholder => "First Name" %>
                        </div>
                      </div>
                      <div class="form-group">
                          <%= f.label :last_name, :class => "col-md-4 control-label" %>
                        <div class="col-md-8">
                          <%= f.text_field :last_name, :class => "form-control", :placeholder => "Last Name" %>
                        </div>
                      </div>
                      <div class="form-group">
                          <%= f.label :email, :class => "col-md-4 control-label" %>
                        <div class="col-md-8">
                          <%= f.email_field :email, :class => "form-control", :placeholder => "Email" %>
                        </div>
                      </div>
                      <div class="form-group">
                          <%= f.label :password, :class => "col-md-4 control-label" %>
                        <div class="col-md-8">
                          <%= f.password_field :password, :class => "form-control", :placeholder => "Password" %>
                        </div>
                      </div>
                      <div class="form-group">
                          <%= f.label :confirm_password, :class => "col-md-4 control-label" %>
                        <div class="col-md-8">
                          <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Confirm Password" %>
                        </div>
                      </div>
                      <div class="form-group">
                        <div class="col-sm-offset-5 col-sm-6">
                          <%= submit_tag("Sign Up", :class => "btn btn-primary") %>
                        </div>
                      </div>
                    <% end %>
                  </div>
            </div>
        </div>
  </div>
</div>