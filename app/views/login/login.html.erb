<div class="container">
	<div class="row">
		<div class="col-sm-6 col-md-4 col-md-offset-4">
			<h1 class="text-center login-title">Sign in to Challenge App</h1>
			<div class="account-wall">
				<%= image_tag("https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120", :alt => "", :class=>"profile-img") %>
 				  <%= form_tag('do_login', class: "form_signin") do %>
  					<%= text_field_tag(:username,nil, class: "form_control", placeholder: "User Name", autofocus: true, required: true) %>
  					<%= password_field_tag(:password,nil,class: "form_control", placeholder: "Password", required: true) %>
  					<%= submit_tag("Sign In", class: "btn btn-lg btn-primary btn-block") %>
  				  <% end %>
			</div>
			<%= link_to("Create an account", {:controller=> "login", :action => "newregistration"}, :class => "text-center new-account")%>
		</div>
	</div>
</div>